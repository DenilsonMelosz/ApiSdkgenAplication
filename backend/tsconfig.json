{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module":"commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "target": "ES2020",
    "rootDir": "./src",
    "strictNullChecks": true,
    "typeRoots" : [
      "node_modules/@types",
    ],
    "skipLibCheck": true,
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
  ]
}
